{
  "private": true,
  "engines": {
    "node": ">= 6.10"
  },
  "scripts": {
    "deploy": "./bin/deploy",
    "bootstrap": "yarn install && lerna bootstrap",
    "format": "prettier --write './packages/**/*.js'",
    "build": "lerna run build --concurrency 1",
    "watch": "lerna run --parallel watch",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:prod": "yarn build && BUNDLED=true jest",
    "lint": "yarn eslint packages --cache",
    "flow": "flow",
    "clean": "git clean -Xdf",
    "report-coverage": "codecov coverage/lcov.info"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^22.1.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "codecov": "^3.0.0",
    "eslint": "^4.13.1",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-flowtype-errors": "^3.3.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.3.0",
    "flow-bin": "^0.63.1",
    "jest": "^22.1.2",
    "lerna": "^2.7.1",
    "microbundle": "^0.3.1",
    "prettier": "^1.10.2",
    "raf": "^3.3.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "workspaces": [
    "packages/microcosm",
    "packages/microcosm-devtools",
    "packages/microcosm-examples",
    "packages/microcosm-graphql",
    "packages/microcosm-http",
    "packages/microcosm-preact",
    "packages/microcosm-react",
    "packages/microcosm-www"
  ]
}
