{
  "name": "microcosm",
  "version": "12.9.0-beta4",
  "private": true,
  "description": "Flux with actions at center stage. Write optimistic updates, cancel requests, and track changes with ease.",
  "main": "microcosm.js",
  "homepage": "http://code.viget.com/microcosm",
  "scripts": {
    "build": "make all",
    "flow": "flow",
    "lint": "prettier --single-quote --semi false -l \"{src,test,examples}/**/*.js\" && eslint \"{src,test,examples}/**/*.js\"",
    "pretty": "prettier --single-quote --semi false --write \"{src,test,examples}/**/*.{js,css}\" && eslint --fix \"{src,test,examples}/**/*.js\"",
    "docs": "jsdoc src -c jsdoc/conf.json && jsdoc src -c jsdoc/conf.json --package package.json",
    "test": "NODE_ENV=test jest --maxWorkers=2",
    "test:cov": "NODE_ENV=test jest --coverage --maxWorkers=2",
    "report-coverage": "codecov coverage/lcov.info",
    "release": "make release"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vigetlabs/microcosm.git"
  },
  "bugs": {
    "url": "https://github.com/vigetlabs/microcosm/issues",
    "email": "developers@viget.com"
  },
  "keywords": [
    "react",
    "flux"
  ],
  "license": "MIT",
  "jest": {
    "testURL": "http://localhost:3000",
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "setupTestFrameworkScriptFile": "./test/helpers/setup.js",
    "roots": [
      "<rootDir>/test",
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,json}",
      "!src/addons/jest-matchers.js"
    ]
  },
  "dependencies": {
    "form-serialize": "^0.7.2"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "body-parser": "^1.17.2",
    "browser-sync": "^2.18.12",
    "codecov": "^2.2.0",
    "console.table": "0.8.0",
    "elizabot": "^0.0.2",
    "enzyme": "^2.9.1",
    "eslint": "^4.1.1",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-flowtype-errors": "^3.3.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "^0.49.1",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.29.0",
    "jest": "^20.0.3",
    "jsdoc": "^3.4.3",
    "jsdoc-babel": "^0.3.0",
    "microcosm-debugger": "^3.0.0",
    "prettier": "^1.5.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-hot-loader": "next",
    "react-router-dom": "^4.1.1",
    "react-test-renderer": "^15.6.1",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-strip": "^1.1.1",
    "rollup-plugin-uglify": "^2.0.1",
    "uid": "^0.0.2",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0",
    "zen-observable": "^0.5.2"
  }
}
